{
  "name": "andy87/avito-php-client",

  "description": "Клиент для отправки HTTP запросов к API Avito.ru.",

  "keywords": ["and_y87", "php", "client", "avito", "rest", "api", "avito.ru", "avito.ru/api"],

  "homepage": "https://github.com/andy87/avito-php-client",

  "license": "CC-BY-SA-4.0",

  "version": "0.1.0",

  "minimum-stability": "dev",

  "prefer-stable": true,

  "authors": [
    {
      "name": "Kidin Andrey",
      "email": "kidin_a@list.ru"
    }
  ],

  "require": {
    "php": ">=8.0",
    "ext-curl": "*"
  },

  "require-dev": {
    "yiisoft/yii2": "~2.0.14"
  },

  "autoload": {
    "psr-4": {
      "andy87\\avito\\client\\": "src/"
    }
  },

  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  },

  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
